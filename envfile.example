
#內建編輯器
EDITOR=notepad

SignalHost=
SignalNumber=

# GitHub Copilot 配置 (使用 pcai copilot-login 登入後自動設定)
# 當 PCAI_PROVIDER=copilot 時，PCAI_MODEL 應設為 Copilot 支援的模型 (如 gpt-4o)
PCAI_MODEL=gpt-5.2  #llama3.3

# 由於 Ollama client 使用 OLLAMA_HOST 作為環境變數，所以要設定 OLLAMA_HOST
OLLAMA_HOST=
PCAI_SYSTEM_PROMPT=

# 導出配置
PCAI_FONT_PATH=assets/fonts/msjh.ttf
PCAI_PDF_OUTPUT_DIR=./exports

# Telegram 配置
TELEGRAM_TOKEN=
TELEGRAM_ADMIN_ID=
TELEGRAM_DEBUG=false

# WebSocket 配置
WEBSOCKET_ENABLED=true
WEBSOCKET_URL=wss://jarvis.justdrink.com.tw/webhook

# Sandbox 配置
WORKSPACE_PATH=

# 以逗號分隔想要啟用的工具名稱
# 如果此行留空或註解掉，則預設啟用全部工具
PCAI_ENABLED_TOOLS=fs_read_file,fs_list_dir,fs_mkdir,fs_append_file

# Google CLI Tool Path
GOG_PATH=bin/gog.exe

SHORT_TERM_TTL_DAYS=7
WHATSAPP_ENABLED=true

ENABLE_AUTO_SKILL_CREATION=false

# 將預設 Provider 改為 copilot or ollama
PCAI_PROVIDER=copilot
